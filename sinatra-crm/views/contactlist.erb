<div class="contactcount">
	<h2 class="countparagraph">
		There are <span class="number"><%=@contact_count %></span> contacts
	</h2>
</div>

<div class="contactwrapper">
	<% @sorted_list.each do |contact| %>
	<div class="contactribbon">
		<a class="emailcontainer"href="/contacts/<%= contact.id %>">  <%= contact.full_name%> (<%= contact.email %>)</a>
		<div class="contactlink">
			<a href="/contacts/<%= contact.id %>/edit">edit</a>
			|
		</div> 
			<form class="deleteform" action='/contacts/<%= contact.id %>/delete' method='post'>
	<input type="hidden" name="_method" value="delete">
			<input class="deletebutton" type="submit" value="Delete">
			</form>
	</div>
	<% end %>
</div>

